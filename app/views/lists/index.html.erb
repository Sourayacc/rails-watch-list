<p id="notice"><%= notice %></p>

<h1>lists</h1>

<table class = "table">
  <thead class = "container">
    <tr>
     <th scope="col">Name</th>
    </tr>
  </thead>

  <tbody class = "container">
    <% @lists.each do |list| %>
      <tr>
       <div class ="d-flex flex-row">
        <div>

          <th scope="row"></th>
          <td><img src="https://images.unsplash.com/photo-1614628079765-6c164f4bd970?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8YXBwYXJ0ZW1lbnR8ZW58MHx8MHx8&auto=format&fit=crop&w=400&q=60" class="avatar-square" alt=""></td>
          <td><%= list.name %></td>
        </div>
        <div>
          <td class="btn btn-secondary btn-sm"><%= link_to 'Show', list %></td>
        </div>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New list', new_list_path, class: "btn btn-ghost" %>
