<p id="notice"><%= notice %></p>

<h1>lists</h1>

<table class = "table">
  <thead class = "container">
    <tr>
     <th scope="col">Name</th>
    </tr>
  </thead>

  <tbody class = "container">
    <% @lists.each do |list| %>
      <tr>
       <div class ="d-flex flex-row">
        <div>

          <th scope="row"></th>
          <td><%= cl_image_tag list.photo.key, width: 400, height: 300, crop: :fill %></td>
          <td><%= list.name %></td>
        </div>
        <div>
          <td class="btn btn-secondary btn-sm"><%= link_to 'Show', list %></td>
        </div>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New list', new_list_path, class: "btn btn-ghost" %>
